/* Toolbar Card Bloquequote */
.toolbar .card-body{
    padding:0;
}
.toolbar button{
    margin-top: 7px;
    margin-right: 6px;
}
.toolbar blockquote{
    font-size: 14px;
    padding-left: 16px;
    margin: 0;
}
span.adicionar {
    cursor: pointer; 
    position: absolute; 
    margin-top: -16px; 
    font-size: 12px; 
    right: 0px;
}
span.adicionar:hover {
    text-decoration: underline;    
}

#page-loader {
  position: fixed;
  left: 0px;
  top: 0px;
  width: 100%;
  height: 100%;
  z-index: 9999;
  background-color: #ffffff;
}
#page-loader img {
  position: absolute;
  top: 50%;
  left: 50%;
  margin: -64px 0 0 -64px;
  width: 128px;
  height: 128px;
}

.scratchpad{
    margin-right: 0.5%;
    width: 100px !important; 
    height: 100px !important;
    /*width: 24%;*/
}

.dd-empty{
    display: none;
}

.titleCardLoteria{
    display: block;
    font-family: arial;
    font-size: 24px;
    font-weight: 400;
    height: 50px;
    line-height: 26px;
    padding: 10px 0 0 10px;
    text-shadow: 0 -1px 0 #333;
    width: 200px;
}

.valorCardLoteria{
    font-family: FF Daxline Pro;
    font-size: 17px;
    font-weight: 900;
    height: 35px;
    line-height: 21px;
    margin-top: 0;
}

.btn_lotto_you{
    background-image: linear-gradient(90deg, #a5cd28 0px, #69a507);
    background-repeat: repeat-x;
    color: #fff;
    content: none;
}